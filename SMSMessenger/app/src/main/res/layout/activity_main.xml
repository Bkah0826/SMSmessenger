<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nait.bkah1.com.smsmessenger.MainActivity"
    android:orientation="vertical"
    android:id="@+id/sms_view">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"></ScrollView>

    <EditText
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/send_button"
        android:layout_toEndOf="@+id/send_button" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onSendButtonPressed"/>

    <ListView
        android:id="@+id/message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/message_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
